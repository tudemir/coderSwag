<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginLeft="16dp" android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/categoryListView"
            app:layout_constraintVertical_bias="0.783"/>
    <ListView
            android:layout_width="254dp"
            android:layout_height="541dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/categoryListView"
    />

</androidx.constraintlayout.widget.ConstraintLayout>